// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Routine {
  id            String    @id @default(cuid())
  semester      Int
  subject_code  String
  subject_name  String
  faculty       String
  group         Group
  day           String
  start         Int
  end           Int
  room          String
  type          SubjectType

  @@map(name: "routine")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  published Boolean  @default(false)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")
  authorId  String

  author Club @relation(fields: [authorId], references: [id])

  @@map(name: "posts")
}

model Club {
  id              String    @id @default(cuid())
  title           String    @unique
  icon            String
  coordinator     Json 
  cocoordinator   Json?
  website         String

  Post     Post[]  

  @@map(name: "club")
}

model Student {
  id            String      @id @default(cuid())
  password      String
  name          String?
  email         String      @unique
  image         String?
  year          Int?
  programme     Programme?
  semester      Int?
  branch        Branch?
  group         Group?
  roll          Int?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "students")
}

enum Programme {
  B
  M
  P
}

enum Branch {
  CS
  EC
  ME
  SM
  DS
}

enum SubjectType {
  THEORY
  TUTORIAL
  LAB
}

enum Group {
  A
  B
}
